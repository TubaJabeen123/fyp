    if (expForm && '<%= showStudentModal %>' !== 'true' && '<%= showGradeSection %>' !== 'true') {
  expForm.classList.remove('hidden');
  studentForm?.classList.add('hidden');
  gradeSection?.classList.add('hidden');
}
        
