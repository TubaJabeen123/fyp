                      <div class="login-space">
                        <div class="login">
                          <!-- Login Form -->
                          <form action="/tchr/login" method="post" autocomplete="off">
                            <div class="group">
                                <label for="email" class="label">Email</label>
                                <input 
                                    id="email" 
                                    name="email" 
                                    type="email" 
                                    class="input form-control <% if (loginErrors && loginErrors.email) { %> is-invalid <% } %>" 
                                    placeholder="Enter your email"
                                    value="<%= email || '' %>"> 
                        
                                <!-- Show error message for email if any -->
                                <% if (loginErrors && loginErrors.email) { %>
                                    <div class="error-text"><%= loginErrors.email %></div>
                                <% } %>
                            </div>
                        
                            <div class="group">
                                <label for="pwd" class="label">Password</label>
                                <div class="input-container">

                                <input 
                                    id="pwd" 
                                    name="pwd" 
                                    type="password" 
                                    class="input form-control <% if (loginErrors && loginErrors.pwd) { %> is-invalid <% } %>" 
                                    placeholder="Enter your password">
                                    <i class="fa fa-eye togglePassword"></i>
                                  </div>
                                
                                <!-- Show error message for password if any -->
                                <% if (loginErrors && loginErrors.pwd) { %>
                                    <div class="error-text"><%= loginErrors.pwd %></div>
                                <% } %>
                            </div>
                        
                            <!-- General error message for invalid credentials -->
                            <% if (loginErrors && loginErrors.general) { %>
                                <div class="error-text"><%= loginErrors.general %></div>
                            <% } %>
                        
                            <div class="group">
                                <input type="submit" class="button btn btn-primary w-100" value="Log In">
                            </div>
                            <div class="group">
                              <div class="social">

                                <div class="fb"> <a href="/tchr/passreset" style="color: rgb(250, 250, 250); text-decoration: none; font-weight: bold;">Reset Password</a>
                                </div></div>                            </div>
                        </form>
                      </div>
                          <!-- Sign Up Form -->
