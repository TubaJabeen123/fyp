                      <!-- Use a variable to set which tab is active based on form submission -->
                      <input id="tab-1" type="radio" name="tab" class="sign-in" <% if (activeTab === 'login') { %> checked <% } %>>
                      <label for="tab-1" class="tab">Login</label>
