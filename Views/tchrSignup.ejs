                            <form action="/tchr/signup" method="post" enctype="multipart/form-data" id="signupForm" autocomplete="off">
                                <div class="group">
                                    <label for="fname" class="label">First Name</label>
                                    <input id="fname" name="fname" type="text" 
                                        class="input form-control <% if (typeof signupErrors !== 'undefined' && signupErrors.fname) { %> is-invalid <% } %>" 
                                        placeholder="Enter your first name" 
                                        value="<%= fname || '' %>">
                                    <% if (typeof signupErrors !== 'undefined' && signupErrors.fname) { %>
                                        <div class="error-text"><%= signupErrors.fname %></div>
                                    <% } %>
                                </div>
                                
                                <div class="group">
                                    <label for="lname" class="label">Last Name</label>
                                    <input id="lname" name="lname" type="text" 
                                        class="input form-control <% if (typeof signupErrors !== 'undefined' && signupErrors.lname) { %> is-invalid <% } %>" 
                                        placeholder="Enter your last name" 
                                        value="<%= lname || '' %>">
                                    <% if (typeof signupErrors !== 'undefined' && signupErrors.lname) { %>
                                        <div class="error-text"><%= signupErrors.lname %></div>
                                    <% } %>
                                </div>
                                
                                <div class="group">
                                    <label for="email" class="label">Email</label>
                                    <input id="email" name="email" type="email" 
                                        class="input form-control <% if (typeof signupErrors !== 'undefined' && signupErrors.email) { %> is-invalid <% } %>" 
                                        placeholder="Enter your email" 
                                        value="<%= email || '' %>">
                                    <% if (typeof signupErrors !== 'undefined' && signupErrors.email) { %>
                                        <div class="error-text"><%= signupErrors.email %></div>
                                    <% } %>
                                </div>
                                <div class="group" >
                                    <label for="role" class="label">Select a Role</label><br>
                                    <select class="roleSelect" id="roleSelect"  name="role" style="color: black;">
                                        <option value="all">All Roles</option>
                                        <option value="instructor">Instructor</option>
                                        <option value="developer">Developer</option>
                                        <option value="physics_expert">Physics Expert</option>
                                    </select>
                                  </div>
                                  <div class="group">
                                    <label for="pwd" class="label">Password</label>
                                    <div class="input-container">
                                        <input id="pwd" name="pwd" type="password" 
                                            class="input form-control <% if (typeof signupErrors !== 'undefined' && signupErrors.confirm_pwd) { %> is-invalid <% } %>" 
                                            placeholder="Enter your password">
                                        <i class="toggle-password fa fa-eye" style="color: black;"></i>
                                    </div>
                                    <% if (typeof signupErrors !== 'undefined' && signupErrors.pwd) { %>
