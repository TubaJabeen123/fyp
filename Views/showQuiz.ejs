<div class="container mt-5" style="margin-top: 40px; padding-top: 20px;">
  <h2 class="mb-4 text-center">Quiz Management</h2>

  <div class="table-responsive">
      <table class="table table-bordered table-striped">
          <thead class="table-dark">
              <tr>
                  <th>Question No.</th>
                  <th>Experiment No.</th>
                  <th>Experiment Title</th>
                  <th>Question</th>
                  <th>Options</th>
                  <th>Answer</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
              <% if (quizData.length > 0) { %>
                  <% quizData.forEach((quiz, index) => { %>
                      <tr>
                          <td><%= index + 1 %></td>
                          <td><%= quiz.exp_no %></td>
                          <td><%= quiz.exp_title %></td>
                          <td><%= quiz.Question %></td>
                          <td>
                              <ul class="mb-0 ps-3">
                                  <li>Option 1: <%= quiz.option1 %></li>
                                  <li>Option 2: <%= quiz.option2 %></li>
                                  <li>Option 3: <%= quiz.option3 %></li>
                                  <li>Option 4: <%= quiz.option4 %></li>
                              </ul>
                          </td>
                          <td><%= quiz.Answer %></td>
                          <td>
                              <div class="d-flex gap-4" >
                                  <!-- Edit Button -->
                                  <form action="/tchr/quizedit/<%= quiz._id %>" method="get">
                                      <button type="submit" class="btn btn-success btn-sm" style="margin-right: 10px;">
                                          <i class="fas fa-edit" ></i>
                                      </button>
                                  </form>
                                  <!-- Delete Button -->
                                  <form action="/tchr/quizdelete/<%= quiz._id %>" method="POST"
                                      onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                      <button type="submit" class="btn btn-danger btn-sm">
                                          <i class="fas fa-trash"  "></i>
                                      </button>
                                  </form>
                              </div>
                          </td>
                      </tr>
                  <% }) %>
              <% } else { %>
                  <tr>
                      <td colspan="7" class="text-center">No quiz data available</td>
                  </tr>
              <% } %>
          </tbody>
      </table>
