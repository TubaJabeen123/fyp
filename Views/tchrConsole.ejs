/* Modal Styling */
.modal {
    display: none; /* Initially hidden */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
    justify-content: center;
    align-items: center;
}

/* Modal Content */
.modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    width: 50%;
    max-width: 500px;
    text-align: center;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
}

/* Close Button */
.close {
    position: absolute;
    right: 15px;
    top: 10px;
    font-size: 24px;
    cursor: pointer;
}

/* Modal Links */
.modal-links {
    margin-top: 15px;
}

.modal-links a {
    display: block;
    margin: 5px 0;
}

html {
            scroll-behavior: smooth;
        }
		.course_image {
  width: 100%;
  position: relative;
  overflow: hidden;
  border-radius: 10px; /* optional */
  background: #f0f0f0; /* optional */
}

/* Use media queries to adapt aspect ratio */
.course_image::before {
  content: '';
  display: block;
  padding-top: 75%; /* 4:3 ratio by default (height = 75% of width) */
}

.exp_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* 'cover' crops a bit, but keeps it neat and ratio-preserving */
}

/* Optional: adjust ratio on smaller screens */
@media (max-width: 768px) {
  .course_image::before {
    padding-top: 100%; /* 1:1 ratio for square images */
  }
}


