	<script>
		
 let showingAllExperiments = false; // force client to show less first

  function toggleExperiments() {
    const experimentItems = document.querySelectorAll('.course_col');
    const toggleButton = document.getElementById('toggleExperimentsBtn');

    // Toggle state
    showingAllExperiments = !showingAllExperiments;

    // Update button text and class
    toggleButton.textContent = showingAllExperiments ? 'Show Less' : 'View All Experiments';
    toggleButton.className = showingAllExperiments ? 'btn btn-secondary' : 'btn btn-primary';

    // Show/hide experiments beyond the first three
    experimentItems.forEach((item, index) => {
      if (index >= 3) {
        item.style.display = showingAllExperiments ? '' : 'none';
      }
    });

    console.log(`Toggled to ${showingAllExperiments ? 'show all' : 'show less'} experiments`);
  }

  // Attach click handler and hide extras when DOM is loaded
  document.addEventListener('DOMContentLoaded', function () {
    const experimentItems = document.querySelectorAll('.course_col');
    const toggleButton = document.getElementById('toggleExperimentsBtn');

    // Always start with showing only first 3
    experimentItems.forEach((item, index) => {
      if (index >= 3) {
        item.style.display = 'none';
      }
    });

    // Set initial button state
    toggleButton.textContent = 'View All Experiments';
    toggleButton.className = 'btn btn-primary';

    // Attach click handler
    toggleButton.addEventListener('click', toggleExperiments);
  });
