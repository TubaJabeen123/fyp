    <style>
       body {
  font-family: 'lato', sans-serif;
 

}
.container {
  max-width: 1000px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 10px;
  padding-right: 10px;
}

h2 {
  font-size: 26px;
  margin: 20px 0;
  color:  #090341;;
  text-decoration: underline;
  text-align: center;
  small {
    font-size: 0.5em;
  }
}

.responsive-table {
  li {
    border-radius: 3px;
    padding: 25px 30px;
    display: flex;
    justify-content: space-between;
    margin-bottom: 25px;
  }
  .table-header {
    background-color:  #090341;;
    color: #ffffff;
        font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
  .table-row {
    background-color: #ffffff;
    box-shadow: 0px 0px 9px 0px rgba(0,0,0,0.1);
  }
  .col-1 {
    flex-basis: 15%;
  }
  .col-2 {
    flex-basis: 15%;
  }
  .col-3 {
    flex-basis: 15%;
  }
  .col-4 {
    flex-basis: 15%;
  }
  .col-5 {
    flex-basis: 15%;
  }
  .col-6 {
    flex-basis: 15%;
  }
  .col-7 {
    flex-basis: 10%;
  }
  
  @media all and (max-width: 767px) {
    .table-header {
      display: none;
    }
    .table-row{
      
    }
    li {
      display: block;
    }
    .col {
      
      flex-basis: 100%;
      
    }
    .col {
      display: flex;
      padding: 10px 0;
      &:before {
        color: #000000;
        padding-right: 10px;
        content: attr(data-label);
        flex-basis: 50%;
        text-align: right;
      }
    }
  }
}
.header_1 {
    float: right;
    text-decoration: none;
    font-size: 20px;
    font-weight: bold;
    color: #000000; /* Dark gray text */
    padding: 10px 15px; /* Adds spacing */
    background-color: #f8f8f8; /* Light background */
    border-radius: 5px; /* Rounded corners */
    transition: all 0.3s ease-in-out;
}

.header_1:hover {
    color: white;
    background-color: #007BFF; /* Blue background on hover */
    text-decoration: none;
}
   .footer_row {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.footer_col {
    margin-bottom: 30px;
    width: 100%; /* Ensure each column takes full width on smaller screens */
}

@media screen and (min-width: 768px) {
    .footer_col {
        width: auto; /* Allow columns to take their natural width on larger screens */
    }
}
.header-bar {
    display: flex;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
  }

    </style>
</head>
<body>
