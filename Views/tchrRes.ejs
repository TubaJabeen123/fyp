    <div class="container" >
        <a href="/tchr/tchrConsole" class="header_1">Home</a>
        <% if (materials.length > 0) { %>
        <h2>Learning Material  </h2>
        <ul class="responsive-table">
          <li class="table-header">
            <div class="col col-1">Exp_No</div>

            <div class="col col-2">Title</div>
            <div class="col col-3">fileType</div>
            <div class="col col-4">Assigned To</div>
            <div class="col col-5">Class Name</div>
            <div class="col col-6">View</div>
            <div class="col col-7">Download</div>
            <div class="col col-8">Delete</div>



          </li>
          <% materials.forEach((material) => { %>
            <li class="table-row">
              <div class="col col-1" data-label="exp_no"><%= material.exp_no %></div>

                <div class="col col-2" data-label="Title"><%= material.title %></div>
                <div class="col col-3" data-label="File Type"><%= material.fileType %></div>
                <div class="col col-4" data-label="Assigned To">
                    <%= material.assignedTo === "all" ? "All Students" : "Class: " + material.className %>
                </div>
                <div class="col col-5" data-label="Class Name"><%= material.className || "N/A" %></div>
                <div class="col col-6" data-label="View">
                  <a href="/tchr/view/<%= material._id %>" target="_blank" style="color: #020f3a;">
                      <i class="fas fa-eye fa-2x"></i>
                  </a>
              </div>
              <div class="col col-7" data-label="Download" >
                  <a href="/tchr/download/<%= material._id %>" style="color: #020f3a;">
                      <i class="fas fa-download fa-2x"></i>
                  </a>
              </div>
              <div class="col col-8" data-label="Delete">
                  <a href="/tchr/delete/<%= material._id %>" style="color: red;">
                      <i class="fas fa-trash-alt fa-2x"></i>
                  </a>
              </div>
              
            </li>
        <% }) %>
         
          
        </ul>
        <% } else { %>
            <p>No resources available.</p>
        <% } %>
