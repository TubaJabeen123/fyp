  <script>
    document.addEventListener('DOMContentLoaded', function() {
  const filterList = document.querySelector('.filters ul');
  const grid = document.querySelector('.grid');

  // Ensure filterList and grid are found
  if (!filterList || !grid) return; // Exit if the elements don't exist

  filterList.addEventListener('click', function(event) {
    // Check if clicked element is a list item (LI)
    if (event.target.tagName === 'LI') {
      const filter = event.target.dataset.filter;

      // Remove 'active' class from all filter items
      document.querySelectorAll('.filters ul li').forEach(item => item.classList.remove('active'));

      // Add 'active' class to the clicked filter item
      event.target.classList.add('active');

      // Update the grid based on the selected filter
      if (filter === '.one-per-row') {
        grid.classList.remove('all-active');
        grid.classList.add('one-per-row-active');
      } else if (filter === '*') {
        grid.classList.remove('one-per-row-active');
        grid.classList.add('all-active');
      } else {
        grid.classList.remove('one-per-row-active', 'all-active');
      }
    }
  });

  // According to the Loftblog tutorial (handling scroll to sections)
  $('.nav li:first').addClass('active');

  var showSection = function(section, isAnimate) {
    var direction = section.replace(/#/, '');
    var reqSection = $('.section').filter('[data-section="' + direction + '"]');
    var reqSectionPos = reqSection.offset().top;

    if (isAnimate) {
      $('body, html').animate({
        scrollTop: reqSectionPos
      }, 800);
    } else {
      $('body, html').scrollTop(reqSectionPos);
    }
  };

  var checkSection = function() {
    $('.section').each(function() {
      var $this = $(this);
      var topEdge = $this.offset().top - 80;
      var bottomEdge = topEdge + $this.height();
      var wScroll = $(window).scrollTop();
      if (topEdge < wScroll && bottomEdge > wScroll) {
        var currentId = $this.data('section');
        var reqLink = $('a').filter('[href*=' + currentId + ']');
        reqLink.closest('li').addClass('active').siblings().removeClass('active');
      }
    });
  };

  // Scroll and menu click handlers
  $('.main-menu, .responsive-menu, .scroll-to-section').on('click', 'a', function(e) {
    e.preventDefault();
    showSection($(this).attr('href'), true);
  });

  $(window).scroll(function() {
    checkSection();
  });
});
