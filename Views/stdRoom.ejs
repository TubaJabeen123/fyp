<style>
.grid .two-per-row {
    width: 48%;          /* Slightly less than 50% for spacing */
    float: left;        /* Float to create rows */
    margin-right: 2%;   /* Spacing between elements */
    margin-bottom: 20px; /* Vertical spacing */
    box-sizing: border-box; /* Include padding/border in width */
}

/* Remove right margin from every 2nd element */
.grid .two-per-row:nth-child(2n) {
    margin-right: 0;
}


/* Styles for ONE per row layout */
.grid.one-per-row-active .two-per-row {
    width: 96%;          /* Nearly full width (allowing for margins) */
    float: left;
    margin-left: 2%;
    margin-right: 2%;
    margin-bottom: 20px;
    box-sizing: border-box;
}


/*  Styles for ALL classes (reset to the original, two-per-row layout) */
.grid.all-active .two-per-row {
    width: 48%;
    float: left;
    margin-right: 2%;
    box-sizing: border-box;
    margin-bottom: 20px;
}


/* Reset the right margin for 2-per-row */
.grid.all-active .two-per-row:nth-child(2n) {
    margin-right: 0;  /* Reset to 0 when all classes are active */
}

/* Correct width */
.grid.all-active .two-per-row {
    width: 48%; /* Original value for two-per-row, restored */

}

