                <!-- Already Enrolled Students -->
               <!-- Already Enrolled Students -->
<div class="form-group py-2" style="margin-bottom: 1.5rem;">
    <label for="enrolled-select" style="display: block; font-weight: bold; color: #333; margin-bottom: 0.5rem;">
        Already Enrolled
    </label>
    <div class="select" style="border: 1px solid #ffffff; border-radius: 6px; background-color: #f7fbff; padding: 0.5rem;">
        <select id="enrolled-select" name="students" multiple style="width: 100%; padding: 0.5rem; border: none; ">
            <% if (classroom.students && classroom.students.length > 0) { %>
                <% classroom.students.forEach(studentId => { %>
                    <% let student = students.find(s => s._id.toString() === studentId.toString()); %>
                    <% if (student) { %>
                        <option value="<%= student._id %>" selected><%= student.email %></option>
                    <% } %>
                <% }); %>
            <% } else { %>
                <option value="">No students enrolled</option>
            <% } %>
        </select>
        <span class="focus"></span>
    </div>
</div>

<!-- Enroll New Student -->
<div class="form-group py-2">
    <label for="standard-select" style="display: block; font-weight: bold; color: #333; margin-bottom: 0.5rem;">
        Enroll New Student
    </label>
    <div class="select" style="border: 1px solid #ccc; border-radius: 6px; background-color: #e6ffe6; padding: 0.5rem;">
        <select name="newStudent" style="width: 100%; padding: 0.5rem; border: none; background: transparent;">
            <option value="">Select a student</option>
            <% students.forEach(student => { %>
                <option value="<%= student._id %>"><%= student.fname %> - <%= student.email %></option>
            <% }) %>
        </select>
        <span class="focus"></span>
    </div>
